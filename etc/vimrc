if has("nvim")
    "NeoBundle Scripts-----------------------------
    if has('vim_starting')
      if &compatible
          set nocompatible               " Be iMproved
    endif

    " Required:
    set runtimepath+=~/.nvim/bundle/neobundle.vim/
    endif

    " Required:
    call neobundle#begin(expand('~/.nvim/bundle'))

    " Let NeoBundle manage NeoBundle
    " Required:
    NeoBundleFetch 'Shougo/neobundle.vim'

    " Add or remove your Bundles here:
    " You can specify revision/branch/tag.
    NeoBundle 'Shougo/vimshell', { 'rev' : '3787e5' }

    " Navigation
    NeoBundle 'ctrlpvim/ctrlp.vim'
    NeoBundle 'mileszs/ack.vim.git'
    NeoBundle 'scrooloose/nerdtree'

    " Git
    NeoBundle 'airblade/vim-gitgutter.git'
    NeoBundle 'fatih/vim-go', { 'rev': 'v1.6' }
    NeoBundle 'tpope/vim-fugitive'

    " Appearance
    NeoBundle 'frankier/neovim-colors-solarized-truecolor-only'
    "NeoBundle 'altercation/vim-colors-solarized.git'
    NeoBundle 'bling/vim-airline'
    NeoBundle 'flazz/vim-colorschemes'
    NeoBundle 'justinmk/molokai'
    NeoBundle 'nanotech/jellybeans.vim'
    NeoBundle 'nathanaelkane/vim-indent-guides.git'
    NeoBundle 'vim-airline/vim-airline-themes'
    NeoBundle 'morhetz/gruvbox'
    NeoBundle 'romainl/flattened'
    NeoBundle 'whatyouhide/vim-gotham'

    " Build
    NeoBundle 'benekastah/neomake'

    " Editing
    NeoBundle 'ntpeters/vim-better-whitespace.git'
    NeoBundle 'vim-scripts/taglist.vim.git'
    NeoBundle 'tpope/vim-surround'
    NeoBundle 'michaeljsmith/vim-indent-object'

    " AutoCompletion
    NeoBundle 'Shougo/deoplete.nvim'
    NeoBundle 'zchee/deoplete-go', {'build': {'unix': 'make'}}
    NeoBundle 'Shougo/neosnippet'
